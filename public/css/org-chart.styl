.org-chart
  max-width 850px

  ul
    list-style none
    margin 0
    padding 0

    li
      background-color #fff
      border 1px solid #fff
      border-radius 3px
      cursor pointer
      display inline-block
      margin 0 10px
      padding 6px
      text-align center
      transition all 0.1s linear
      vertical-align top
      width 200px

      > img,
      > span.fa
        width 100%

      > span.fa
        line-height 150px

      &:hover
        background-color #f5f5f5
        border-color rgba(150,150,150,0.75)
        box-shadow 1px 1px 10px 1px rgba(0,0,0,0.3)

    &.employee
      //background transparent url('/images/circles.svg') center center no-repeat;
      background-size 460px 460px

    &.manager li,
    &.direct-reports li
      width 150px

      > img
        height 130px

      > span.fa
        line-height 130px

      h6
        line-height 1.3

    &.manager li h6
      margin-bottom 3.5px

    &.direct-reports
      background-color #ddd
      border-radius 3
      display inline-block

      li
        margin 10px
        padding 0 6px

        > img,
        > span.fa
          margin-top 6px
/*********************************
 Printer
*********************************/
printer
  border-radius 2px
  box-sizing border-box
  cursor pointer
  display block
  height 30px
  position absolute
  transition background-color 0.2s linear
  white-space nowrap
  width 30px

  &:hover
    background-color rgba(222, 88, 88,.5);

  .printer span
    font-size 20px
    line-height 30px
    padding 4px 5px

  &.sm
    height 20px
    width 20px

    .printer span
      font-size 12px
      line-height 14px
      padding 2px 3px

  &.vert .printer
    position absolute
    top 50%
    left 50%
    transform translateX(-50%) translateY(-50%) rotate(-90deg)

  &.color

    &:hover
      background-color #00B259

    .printer span
        color #005295

  &.mapped
    z-index 1

    .mapped-label
      bottom -25px
      left -8px
      line-height 1.2em
      position absolute


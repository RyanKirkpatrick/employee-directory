/*********************************
 Desk
*********************************/
desk
  background-color transparent
  border 1px solid transparent
  box-sizing border-box
  cursor pointer
  display table
  position absolute
  transition background-color 0.2s linear
  white-space nowrap

  &:hover
    background-color rgba(222, 88, 88,.5);

  &.mapped
    z-index 1

  .seat
    display table-cell
    font-size 12px
    text-align center
    vertical-align middle

    /* seat number */
    span
      text-align center
      visibility hidden

      &.admin
        visibility visible

  .marker
    position absolute
    left 0
    height 100%
    top 0
    width 100%

    .mapped-label
      line-height 1.2em
      position absolute

  /* Employee Specific */
  &.employee
    height $employee-height
    width $employee-width

    /* Horizontal Employee Desks are the default */
    .mapped-label
      bottom -25px
      left -6px

    /* Vertical Employee Desks */
    &.vert
      height $employee-width
      width $employee-height

      .seat
        position absolute
        top 50%
        left 50%
        transform translateX(-50%) translateY(-50%) rotate(90deg)

      .mapped-label
        bottom -10px
        left -10px

  /* Manager Specific */
  &.manager
    height $manager-height
    width $manager-width

    /* Horizontal Manager Desks are the default */
    .seat span
      background-color rgba(255,255,255,.75);

    .mapped-label
      bottom -15px
      left 0

    /* Vertical Manager Desks */
    &.vert
      height $manager-width
      width $manager-height

      .mapped-label
        bottom -5px

    &.it
      width $manager-it-width

      &.vert
        height $manager-it-width
        width $manager-height

    &.ewa
      transform rotate(26deg)

      .seat,
      .marker
        transform rotate(-26deg)

  /* Office Specific */
  &.office
    height $office-height
    width $office-width

    .seat span
      background-color rgba(255,255,255,.75);

    .mapped-label
      bottom 5px
      left 20px


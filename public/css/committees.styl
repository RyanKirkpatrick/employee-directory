.committee
  max-width 850px

  .committee-header

    span
      text-transform capitalize

    img
      height 128px

  ul.committee-members
    list-style none
    margin 0
    padding 0

    li
      background-color #fff
      border 1px solid #fff
      border-radius 3px
      cursor pointer
      display inline-block
      margin 0 10px 20px
      padding 0 6px
      text-align center
      transition all 0.1s linear
      vertical-align top
      width 150px

      > img
        height 130px
        margin-top 6px
        width 100%

      > span.fa
        line-height 130px
        margin-top 6px

      h6
        line-height 1.3

      &:hover
        background-color #f5f5f5
        box-shadow 1px 1px 10px 1px rgba(0,0,0,0.3)